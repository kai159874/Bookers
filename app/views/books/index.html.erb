<div class="success">
  <%= flash[:notice] %>
</div>

<h1 class="header">Books</h1>

<table class="index-table">
  <thead class="thead">
    <th class="title">Title</th>
    <th class="body">Body</th>
  </thead>
  <% @books.each do |book| %>
  <tbody class="tbody">
    <tr>
      <td class="title"><%= book.title %></td>
      <td class="body"><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id), method: :get, class: "link" %></td>
      <td><%= link_to "Edit", edit_book_path(book.id), method: :get, class: "link" %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, class: "link", "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<h2 class="header">New book</h2>

<div class="input-space">
  

<% if @book.errors.any? %>
  <div class="error-box">
    <div class="error-count">
      <%= @book.errors.count %>error prohibited this book from being saved:
    </div>
    <ul class="error-mes">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


  <%= form_with model: @book, url: '/books', method: :post do |f| %>
  
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body, class: "text-area" %>
  <%= f.submit 'Create Book', class: "button" %>
  <% end %>
</div>
