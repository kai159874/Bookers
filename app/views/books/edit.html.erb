

<h1 class="header">Editing book</h1>

<div class=input-space>

<div class="success">
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
  <div class="error-box">
    <div class="error-count">
      <%= @book.errors.count %>error prohibited this book from being saved:
    </div>
    <ul class="error-mes">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path, method: :patch do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Body</p>
  <%= f.text_area :body, class: "text-area" %>
  
  <%= f.submit 'Update Book', class: "button" %>
  </div>
  
  <div class="link-area">
  <%= link_to "Show", book_path, method: :get, class: "link" %><p>|</p><%= link_to "back", books_path, method: :get, class: "link" %>
  </div>
  
<% end %>